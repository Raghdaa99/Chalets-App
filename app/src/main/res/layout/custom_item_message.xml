<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/linear_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/_200sdp"
        android:layout_gravity="end"
        android:background="@drawable/back_sender"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/message_body_text_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_7sdp"
            android:text="Hello sam"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_receiver_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
           >

            <TextView
                android:id="@+id/recevire_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raghdaa Said"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_3sdp"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/message_body_text_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recevire_name"
                android:maxWidth="@dimen/_200sdp"
                android:layout_weight="1"
                android:text="hi raghdaahkkkk"
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_7sdp"
                android:background="@drawable/back_receiver"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_10ssp" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>